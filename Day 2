#include <iostream>
using namespace std;

int main() {
	int t,m1,m2;
	cin>>t;
	while(t--)
	{
	    int l,v1,v2;
	    cin>>l>>v1>>v2;
	    if(l%v1==0)
	    {
	        m1=(l/v1);
	    }
	    else if(l%v1!=0)
	    {
	         m1=(l/v1)+1;
	    }
	    if(l%v2==0)
	    {
	       m2=(l/v2);
	    }
	    else if(l%v2!=0)
	    {
	         m2=(l/v2)+1;
	    }
	    int res=m1-m2-1;
	    cout<<res<<endl;
	}
	
return 0;
}
